<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/css/style.css" rel="stylesheet">
    <title>〇×ゲーム</title>
</head>
<body>
    <%- include('header'); %>

    <a href="/user/adduser" class="btn btn--orange">追加</a>

    <ul class="users">
        <% users.forEach((user) =>{ %>
            <li>
                <h2><%= user.name %></h2>
                <p><%= user.color %></p>
                <form action="/deleteuser/<%= user.id %>" method="post">
                    <input type="submit" value="削除">
                </form>
            </li>
        <% }) %>
    </ul>

    <%- include('footer'); %>
</body>
</html>